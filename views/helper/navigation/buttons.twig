{% set nc_page = get_current_page() %}
{% if nc_page is not null %}
{% set nc_page_buttons = nc_page.get_buttons() %}
{% if nc_page_buttons|length > 0 %}
    {% for nc_item in nc_page_buttons %}
    <a href="{{ nc_item.get_url(page_object_id) }}"{% if nc_item.get_title() is not null %} title="{{ nc_item.get_title() }}" data-toggle="tooltip"{% endif %} class="btn {{ nc_item.class }}"><i class="{{ nc_item.icon }}"></i> {{ nc_item.get_name() }}</a>
    {% endfor %}
{% endif %}
{% endif %}